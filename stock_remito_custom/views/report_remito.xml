<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción del Reporte de Remito -->
    <record id="action_report_remito" model="ir.actions.report">
        <field name="name">Remito</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">stock_remito_custom.report_remito_document</field>
        <field name="report_file">stock_remito_custom.report_remito_document</field>
        <field name="print_report_name">'Remito_%s' % (object.remito_number or object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="stock_remito_custom.paperformat_remito_manicop"/>
        <field name="groups_id" eval="[(4, ref('stock_remito_custom.group_print_remito'))]"/>
    </record>

    <!-- Template Principal del Reporte -->
    <template id="report_remito_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock_remito_custom.report_remito_content"/>
            </t>
        </t>
    </template>

    <!-- Contenido del Remito -->
    <template id="report_remito_content">
        <div class="page remito-page">
            <!-- Estilos CSS para el remito -->
            <style>
                /* Reset y configuracion base */
                .remito-page {
                    font-family: Arial, sans-serif;
                    font-size: 11pt;
                    color: #000;
                    position: relative;
                    width: 90%;
                    min-height: 350mm;
                    padding: 0;
                    margin: 0;
                    box-sizing: border-box;
                }
                
                /* Color corporativo Manicop - Bordo/Rojo oscuro */
                .border-manicop {
                    border: 1.5px solid #B00000 !important;
                }
                
                .bg-manicop {
                    background-color: #B00000 !important;
                    color: white !important;
                }
                
                .text-manicop {
                    color: #B00000 !important;
                }
                
                /* Contenedor principal con borde */
                .remito-container {
                    border: 2px solid #B00000;
                    padding: 0;
                    margin: 0 0 40mm 0;
                    min-height: 265mm;
                    position: relative;
                    page-break-after: always;
                }
                
                /* Header del remito */
                .remito-header {
                    display: table;
                    width: 100%;
                    border-bottom: 1.5px solid #B00000;
                }
                
                .header-logo {
                    display: table-cell;
                    width: 7%;
                    vertical-align: middle;
                    padding: 5px;
                }
                
                .header-left {
                    display: table-cell;
                    width: 33%;
                    vertical-align: top;
                    padding: 8px;
                }
                
                .header-center {
                    display: table-cell;
                    width: 5%;
                    vertical-align: top;
                    text-align: center;
                    padding: 5px 5px;
                }                
                .header-right {
                    display: table-cell;
                    width: 50%;
                    vertical-align: top;
                    text-align: center;
                    padding: 15px 8px 8px 8px;
                }                
                /* Logo */
                .logo-container {
                    text-align: center;
                }
                
                .logo-container img {
                    max-width: 160px;
                    max-height: 120px;
                }
                
                /* Letra del comprobante (R) */
                .letter-box {
                    width: 40px;
                    height: 40px;
                    margin: 0 auto;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 26pt;
                    font-weight: bold;
                    color: #B00000;
                }
                
                .letter-code {
                    font-size: 6pt;
                    text-align: center;
                    margin-top: 2px;
                    color: #B00000;
                    white-space: nowrap;
                    width: 100%;
                }
                
                /* Título REMITO */
                .remito-title {
                    font-size: 14pt;
                    font-weight: 800;
                    text-align: center;
                    color: #B00000;
                    letter-spacing: 3px;
                }
                
                .remito-subtitle {
                    font-size: 8pt;
                    text-align: center;
                    margin-bottom: 8px;
                    color: #B00000;
                }
                
                .remito-number {
                    font-size: 14pt;
                    font-weight: bold;
                    text-align: left;
                    margin-top: 10px;
                    margin-bottom: 10px;
                    margin-left: 35px;
                    color: #B00000;
                }
                
                /* Datos fiscales empresa */
                .company-name {
                    font-size: 16pt;
                    font-weight: bold;
                    text-align: center;
                    color: #B00000;
                    margin-bottom: 0;
                    line-height: 1.2;
                    max-width: 150px;
                    margin-left: auto;
                    margin-right: auto;
                    word-break: break-word;
                    display: block;
                    width: 100%;
                }
                
                .company-subtitle {
                    font-size: 8pt;
                    font-weight: bold;
                    text-align: center;
                    color: #B00000;
                    margin-bottom: 8px;
                    margin-top: 5px;
                    padding-top: 5px;
                    border-top: 1px solid #B00000;
                    width: 70%;
                    margin-left: auto;
                    margin-right: auto;
                }
                
                .company-info {
                    font-size: 7pt;
                    text-align: center;
                    line-height: 1.5;
                    color: #B00000;
                }
                
                .company-iva {
                    font-size: 8pt;
                    font-weight: bold;
                    text-align: center;
                    margin-top: 5px;
                    padding-top: 3px;
                    color: #B00000;
                }
                
                /* Datos del cliente - Bloque superior (Razón Social / Cliente N°) */
                .client-block-top {
                    display: table;
                    width: 100%;
                    border-bottom: 1.5px solid #B00000;
                }
                
                .client-top-cell {
                    display: table-cell;
                    padding: 10px 10px;
                    vertical-align: middle;
                }
                
                .client-top-razon {
                    width: 66%;
                }
                
                .client-top-nro {
                    width: 34%;
                }
                
                /* Datos del cliente - Bloque inferior (7 campos en 3 columnas) */
                .client-block-bottom {
                    border-bottom: 1.5px solid #B00000;
                    padding: 6px 10px;
                }
                
                .client-row {
                    display: table;
                    width: 100%;
                    margin-bottom: 3px;
                }
                
                .client-row:last-child {
                    margin-bottom: 0;
                }
                
                .client-cell {
                    display: table-cell;
                    padding: 6px 5px;
                    text-align: left;
                }
                
                .client-label {
                    font-weight: bold;
                    font-size: 9pt;
                }
                
                .client-value {
                    font-size: 11pt;
                    color: #000;
                    font-weight: normal;
                    font-style: italic;
                    padding-left: 25px;
                }
                
                .col-1 { width: 38%; }
                .col-2 { width: 31%; }
                .col-3 { width: 31%; }
                
                /* Tabla de productos */
                .products-section {
                    min-height: 160mm;
                }
                
                .products-header {
                    display: table;
                    width: 100%;
                    border-bottom: 1.5px solid #B00000;
                    font-weight: bold;
                    font-size: 8pt;
                }
                
                .products-header-cell {
                    display: table-cell;
                    padding: 10px 4px;
                    text-align: center;
                }
                
                .col-codigo { width: 12%; }
                .col-cantidad { width: 10%; }
                .col-descripcion { width: 40%; }
                .col-precio { width: 14%; }
                .col-importe { width: 9%; }
                
                /* Alineación de encabezados */
                .products-header .col-codigo,
                .products-header .col-cantidad,
                .products-header .col-descripcion,
                .products-header .col-precio,
                .products-header .col-importe {
                    text-align: center;
                }
                
                /* Alineación del contenido */
                .product-row .col-codigo {
                    text-align: right;
                    padding-right: 25px !important;
                }
                .product-row .col-cantidad {
                    text-align: left;
                    padding-left: 30px !important;
                }
                .product-row .col-descripcion {
                    text-align: left;
                    padding-left: 30px !important;
                }
                .product-row .col-precio,
                .product-row .col-importe {
                    text-align: center;
                }
                
                .products-body {
                    min-height: 240mm;
                    border-bottom: none;
                }
                
                .product-row {
                    display: table;
                    width: 100%;
                    border-bottom: none;
                }
                
                .product-cell {
                    display: table-cell;
                    padding: 4px;
                    font-size: 10pt;
                    vertical-align: middle;
                    text-align: center;
                    border-bottom: none;
                    font-style: italic;
                }
                
                .text-right {
                    text-align: right !important;
                }
                
                .text-center {
                    text-align: center !important;
                }
                
                .text-left {
                    text-align: left !important;
                }
                
                /* Footer del remito */
                .remito-footer {
                    border-bottom: none;
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    right: 0;
                }
                
                .footer-total-row {
                    display: table;
                    width: 100%;
                    border-bottom: 1.5px solid #B00000;
                    height: 60px;
                }
                
                .footer-total-empty1 {
                    display: table-cell;
                    width: 60%;
                    padding: 8px;
                    border-top: none;
                }
                
                .footer-total-label {
                    display: table-cell;
                    width: 20%;
                    padding: 8px;
                    font-weight: bold;
                    text-align: center;
                    font-size: 10pt;
                    border-left: 1.5px solid #B00000;
                    border-right: 1.5px solid #B00000;
                    border-top: 1.5px solid #B00000;
                    vertical-align: middle;
                }
                
                .footer-total-value {
                    display: table-cell;
                    width: 20%;
                    padding: 8px;
                    font-weight: bold;
                    text-align: center;
                    font-size: 12pt;
                    border-top: 1.5px solid #B00000;
                    vertical-align: middle;
                }
                
                .footer-son-pesos {
                    padding: 15px 15px;
                    border-bottom: 1.5px solid #B00000;
                }
                
                /* Bloque Observaciones + Código de barras */
                .footer-observations-row {
                    display: table;
                    width: 100%;
                    border-bottom: 1.5px solid #B00000;
                    min-height: 70px;
                    height: 70px;
                }
                
                .footer-observations {
                    display: table-cell;
                    width: 66%;
                    padding: 8px 10px;
                    vertical-align: top;
                    border-right: none;
                }
                
                .footer-barcode {
                    display: table-cell;
                    width: 34%;
                    padding: 8px 10px;
                    vertical-align: middle;
                    text-align: center;
                }
                
                /* Bloque Fiscal - 4 columnas sin bordes */
                .footer-fiscal {
                    display: table;
                    width: 100%;
                    font-size: 7pt;
                }
                
                .footer-col-logo {
                    display: table-cell;
                    width: 7%;
                    padding: 5px;
                    vertical-align: middle;
                    text-align: center;
                }
                
                .footer-col-logo img {
                    width: 120px;
                    height: auto;
                }
                
                .footer-col-datos {
                    display: table-cell;
                    width: 28%;
                    padding: 5px 8px;
                    vertical-align: top;
                    text-align: left;
                    font-size: 7pt;
                    line-height: 1.4;
                }
                
                .footer-col-imp {
                    display: table-cell;
                    width: 25%;
                    padding: 5px 8px;
                    vertical-align: top;
                    text-align: right;
                    font-size: 9pt;
                    line-height: 1.4;
                    padding-right: 35px;
                }
                
                .footer-col-cai {
                    display: table-cell;
                    width: 29%;
                    padding: 5px 8px;
                    vertical-align: top;
                    text-align: left;
                    padding-top: 8px;
                    vertical-align: top;
                    overflow: hidden;
                }
                
                .cai-label {
                    font-weight: bold;
                    font-size: 13pt;
                    text-transform: uppercase;
                    display: inline;
                    margin-right: 5px;
                }
                
                .cai-value {
                    font-size: 13pt;
                    font-weight: bold;
                    display: inline;
                }
                
                /* Marca de agua */
                .watermark {
                    position: absolute;
                    top: 50%;
                    left: 40%;
                    margin-top: -150px;
                    margin-left: -150px;
                    width: 480px;
                    height: 480px;
                    opacity: 0.15;
                    z-index: 0;
                    pointer-events: none;
                }
                
                .watermark img {
                    width: 480px;
                    height: auto;
                }
                
                /* Codigo de barras */
                .barcode-container {
                    text-align: center;
                    margin-top: 5px;
                }
                
                .fecha-row {
                    text-align: left;
                    margin-bottom: 20px;
                    margin-left: 15px;
                    font-size: 11pt;
                    display: flex;
                    align-items: baseline;
                    gap: 5px;
                }
                
                .fecha-label {
                    color: #B00000;
                    font-weight: bold;
                }
                
                .fecha-value {
                    color: #000;
                    font-size: 13pt;
                    padding-left: 15px;
                }                
                .original-row {
                    text-align: left;
                    margin-left: 15px;
                    color: #000;
                    font-size: 12pt;
                    padding-left: 88px;
                    margin-top: -23px;
                    margin-bottom: 8px;
                }                
                /* Datos CUIT emisor */
                .emisor-data {
                    font-size: 7pt;
                    text-align: left;
                    line-height: 1.4;
                    margin-left: 15px;
                    color: #B00000;
                }
            </style>
            
            <!-- Loop para imprimir Original y Duplicado -->
            <t t-set="copy_types" t-value="['Original', 'Duplicado']"/>
            <t t-foreach="copy_types" t-as="copy_type">
            <!-- Contenedor principal -->
            <div class="remito-container">
                
                <!-- Marca de agua -->
                <div class="watermark">
                    <t t-if="o.company_id.remito_watermark">
                        <img t-att-src="image_data_uri(o.company_id.remito_watermark)" alt="Watermark"/>
                    </t>
                </div>
                
                <!-- ==================== HEADER ==================== -->
                <div class="remito-header">
                    <!-- Columna Logo -->
                    <div class="header-logo">
                        <div class="logo-container">
                            <t t-if="o.company_id.logo">
                                <img t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"/>
                            </t>
                            <t t-else="">
                                <div style="font-size: 16pt; font-weight: bold; color: #B00000;">
                                    <span style="background: #FFCC00; padding: 5px; border-radius: 5px;">ManiCop</span>
                                </div>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Columna Datos Empresa -->
                    <div class="header-left">
                        <div class="company-name">
                            <t t-esc="o.company_id.name"/>
                        </div>
                        <div class="company-subtitle">
                            <t t-esc="o.company_id.remito_subtitle"/>
                        </div>
                        <div class="company-info">
                            <t t-esc="o.company_id.remito_address or o.company_id.street or ''"/><br/>
                            <t t-esc="o.company_id.remito_phone or o.company_id.phone or ''"/><br/>
                            <t t-esc="o.company_id.remito_email or o.company_id.email or ''"/>
                        </div>
                        <div class="company-iva">
                            <t t-esc="o.company_id.remito_fiscal_type"/>
                        </div>
                    </div>
                    
                    <!-- Columna Centro: Letra del comprobante -->
                    <div class="header-center">
                        <div class="letter-box">
                            <t t-esc="o.company_id.remito_letter or 'R'"/>
                        </div>
                        <div class="letter-code">
                            CODIGO N° 91
                        </div>
                    </div>
                    
                    <!-- Columna Derecha: Tipo documento y número -->
                    <div class="header-right">
                        <div class="remito-title">R E M I T O</div>
                        <div class="remito-subtitle">DOCUMENTO NO VALIDO COMO FACTURA</div>
                        <div class="remito-number">
                            N° <t t-esc="o.remito_number or '0001 - 00000000'"/>
                        </div>
                        <div class="fecha-row">
                            <span class="fecha-label">FECHA:</span>
                            <span class="fecha-value"><t t-esc="o.scheduled_date.strftime('%d/%m/%Y') if o.scheduled_date else ''"/></span>
                        </div>
                        <div class="original-row" t-att-style="'padding-left: 80px' if copy_type == 'Duplicado' else 'padding-left: 88px'">
                            <t t-esc="copy_type"/>
                        </div>
                        <div class="emisor-data">
                            C.U.I.T. N° <t t-esc="o.company_id.vat or ''"/><br/>
                            <t t-esc="o.company_id.remito_cm_number or ''"/><br/>
                            <t t-esc="o.company_id.remito_activity_start or ''"/>
                        </div>
                    </div>
                </div>
                
                <!-- ==================== DATOS CLIENTE ==================== -->
                <!-- Bloque superior: Razón Social (3/4) y Cliente N° (1/4) -->
                <div class="client-block-top">
                    <div class="client-top-cell client-top-razon">
                        <span class="client-label">Razon Social:</span>
                        <span class="client-value" style="margin-left: 10px;">
                            <t t-esc="o._normalize_text(o.partner_id.name) or ''"/>
                        </span>
                    </div>
                    <div class="client-top-cell client-top-nro">
                        <span class="client-label">Cliente N°:</span>
                        <span class="client-value" style="margin-left: 10px;">
                            <t t-esc="o.partner_id.customer_number if o.partner_id else ''"/>
                        </span>
                    </div>
                </div>
                
                <!-- Bloque inferior: 7 campos en 3 columnas, 3 filas -->
                <div class="client-block-bottom">
                    <!-- Fila 1: Domicilio | Localidad | Provincia -->
                    <div class="client-row">
                        <div class="client-cell col-1">
                            <span class="client-label">Domicilio:</span>
                            <span class="client-value">
                                <t t-esc="o._normalize_text(o.partner_id.street) if o.partner_id else ''" />
                            </span>
                        </div>
                        <div class="client-cell col-2">
                            <span class="client-label">Localidad:</span>
                            <span class="client-value">
                                <t t-esc="o._normalize_text(o.partner_id.city) if o.partner_id else ''" />
                            </span>
                        </div>
                        <div class="client-cell col-3">
                            <span class="client-label">Provincia:</span>
                            <span class="client-value">
                                <t t-esc="o._normalize_text(o.partner_id.state_id.name) if o.partner_id and o.partner_id.state_id else ''" />
                            </span>
                        </div>
                    </div>
                    
                    <!-- Fila 2: I.V.A. | C.U.I.T. | Ing. Brutos -->
                    <div class="client-row">
                        <div class="client-cell col-1">
                            <span class="client-label">I.V.A.:</span>
                            <span class="client-value">
                                <t t-esc="o._normalize_text(o.partner_id.l10n_ar_afip_responsibility_type_id.name) if o.partner_id and o.partner_id.l10n_ar_afip_responsibility_type_id else ''" />
                            </span>
                        </div>
                        <div class="client-cell col-2">
                            <span class="client-label">C.U.I.T.:</span>
                            <span class="client-value">
                                <t t-esc="o.partner_id.vat if o.partner_id else ''" />
                            </span>
                        </div>
                        <div class="client-cell col-3">
                            <span class="client-label">Ing. Brutos:</span>
                            <span class="client-value">
                                <t t-esc="o.partner_id.l10n_ar_gross_income_number if o.partner_id else ''" />
                            </span>
                        </div>
                    </div>
                    
                    <!-- Fila 3: Condición de Venta (ocupa toda la fila) -->
                    <div class="client-row">
                        <div class="client-cell" style="width: 100%;">
                            <span class="client-label">Condicion de Venta:</span>
                            <span class="client-value">
                                <t t-esc="o.partner_id.sale_condition if o.partner_id else ''" />
                            </span>
                        </div>
                    </div>
                </div>
                
                <!-- ==================== TABLA DE PRODUCTOS ==================== -->
                <div class="products-section">
                    <!-- Encabezado de la tabla -->
                    <div class="products-header">
                        <div class="products-header-cell col-codigo">CODIGO</div>
                        <div class="products-header-cell col-cantidad">CANTIDAD</div>
                        <div class="products-header-cell col-descripcion">DESCRIPCION</div>
                        <div class="products-header-cell col-precio">PRECIO UNITARIO</div>
                        <div class="products-header-cell col-importe">IMPORTE</div>
                    </div>
                    
                    <!-- Cuerpo de la tabla -->
                    <div class="products-body">
                        <t t-set="total" t-value="0"/>
                        <t t-foreach="o._get_remito_line_data()" t-as="line">
                            <t t-set="total" t-value="total + line['subtotal']"/>
                            <div class="product-row">
                                <div class="product-cell col-codigo">
                                    <t t-esc="line['code']"/>
                                </div>
                                <div class="product-cell col-cantidad">
                                    <t t-esc="'%.2f' % line['quantity']"/>
                                </div>
                                <div class="product-cell col-descripcion">
                                    <t t-esc="line['description']"/>
                                </div>
                                <div class="product-cell col-precio">
                                </div>
                                <div class="product-cell col-importe">
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
                
                <!-- ==================== FOOTER ==================== -->
                <div class="remito-footer">
                    <!-- Fila TOTAL -->
                    <div class="footer-total-row">
                        <div class="footer-total-empty1"></div>
                        <div class="footer-total-label">TOTAL</div>
                        <div class="footer-total-value"></div>
                    </div>
                    
                    <!-- Son Pesos -->
                    <div class="footer-son-pesos">
                        <strong>SON PESOS:</strong>
                    </div>
                    
                    <!-- Observaciones + Código de barras -->
                    <div class="footer-observations-row">
                        <div class="footer-observations">
                            <strong>OBSERVACIONES:</strong> <t t-esc="o._normalize_text(o.remito_observations) or ''"/>
                        </div>
                        <div class="footer-barcode">
                            <t t-if="o.company_id.remito_barcode_image">
                                <img t-att-src="image_data_uri(o.company_id.remito_barcode_image)" alt="Codigo de barras" style="max-width: 180px; max-height: 80px;"/>
                            </t>
                        </div>
                    </div>
                    
                    <!-- Datos Fiscales del Pie - 4 columnas sin bordes -->
                    <div class="footer-fiscal">
                        <!-- Columna 1: Logo imprenta -->
                        <div class="footer-col-logo">
                            <t t-if="o.company_id.remito_footer_image">
                                <img t-att-src="image_data_uri(o.company_id.remito_footer_image)" alt="Imprenta"/>
                            </t>
                        </div>
                        
                        <!-- Columna 2: Datos imprenta (4 líneas) -->
                        <div class="footer-col-datos">
                            <t t-esc="o.company_id.remito_footer_line1 or ''"/><br/>
                            <t t-esc="o.company_id.remito_footer_line2 or ''"/><br/>
                            <t t-esc="o.company_id.remito_footer_line3 or ''"/><br/>
                            <t t-esc="o.company_id.remito_footer_line4 or ''"/>
                        </div>
                        
                        <!-- Columna 3: Fecha Imp y Doc. Imp (2 líneas) -->
                        <div class="footer-col-imp">
                            <strong>Fecha Imp.:</strong> <t t-esc="o.company_id.remito_print_date or ''"/><br/>
                            <div style="margin-top: 2px;">
