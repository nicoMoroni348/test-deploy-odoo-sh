<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Tree (Lista) para Food Label Warning -->
        <record id="view_food_label_warning_tree" model="ir.ui.view">
            <field name="name">food.label.warning.tree</field>
            <field name="model">food.label.warning</field>
            <field name="arch" type="xml">
                <list string="Advertencias de Rótulo">
                    <field name="name"/>
                    <field name="image" widget="image" options="{'size': [50, 50]}"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Vista Form (Formulario) para Food Label Warning -->
        <record id="view_food_label_warning_form" model="ir.ui.view">
            <field name="name">food.label.warning.form</field>
            <field name="model">food.label.warning</field>
            <field name="arch" type="xml">
                <form string="Advertencia de Rótulo">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" invisible="active"/>
                        </div>
                        <group>
                            <group>
                                <field name="name" placeholder="Ej: EXCESO EN SODIO"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action para abrir las advertencias -->
        <record id="action_food_label_warning" model="ir.actions.act_window">
            <field name="name">Advertencias de Rótulo</field>
            <field name="res_model">food.label.warning</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear una nueva advertencia
                </p>
                <p>
                    Las advertencias son los octógonos que aparecen en el rótulo alimenticio,
                    como "EXCESO EN SODIO", "EXCESO EN GRASAS TOTALES", etc.
                </p>
            </field>
        </record>

        <!-- Menú dentro de Configuración de Manufactura -->
        <menuitem id="menu_food_label_warning"
                  name="Advertencias de Rótulo"
                  parent="mrp.menu_mrp_configuration"
                  action="action_food_label_warning"
                  sequence="100"/>

    </data>
</odoo>
