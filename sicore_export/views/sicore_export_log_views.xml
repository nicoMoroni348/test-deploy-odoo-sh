<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista List de Logs -->
    <record id="view_sicore_export_log_list" model="ir.ui.view">
        <field name="name">sicore.export.log.list</field>
        <field name="model">sicore.export.log</field>
        <field name="arch" type="xml">
            <list string="Logs de Exportación SICORE" default_order="create_date desc">
                <field name="create_date" string="Fecha/Hora"/>
                <field name="export_type"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="user_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="records_count"/>
                <field name="total_retention_amount" string="Retenido/Percibido" sum="Total Retenido" widget="monetary"/>
                <field name="total_transaction_amount" string="Transacciones" sum="Total Transacciones" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" 
                       decoration-success="state == 'success'" 
                       decoration-warning="state == 'warning'" 
                       decoration-danger="state == 'error'"
                       widget="badge"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Form de Logs -->
    <record id="view_sicore_export_log_form" model="ir.ui.view">
        <field name="name">sicore.export.log.form</field>
        <field name="model">sicore.export.log</field>
        <field name="arch" type="xml">
            <form string="Log de Exportación SICORE" create="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="success,warning,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Botón para descargar archivo -->
                        <button name="%(base.action_attachment)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-download"
                                invisible="file_content == False"
                                context="{'default_res_model': 'sicore.export.log', 'default_res_id': id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Descargar</span>
                                <span class="o_stat_text">Archivo</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información General">
                            <field name="name"/>
                            <field name="export_type"/>
                            <field name="user_id" options="{'no_open': True}"/>
                            <field name="company_id" options="{'no_open': True}" groups="base.group_multi_company"/>
                            <field name="create_date" string="Fecha/Hora Generación"/>
                        </group>
                        <group string="Período Exportado">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="records_count"/>
                            <field name="file_name"/>
                        </group>
                        <group string="Montos">
                            <field name="total_retention_amount" widget="monetary"/>
                            <field name="total_transaction_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Archivo Exportado" name="file" invisible="not file_content">
                            <group>
                                <field name="file_content" filename="file_name" widget="binary"/>
                            </group>
                        </page>
                        
                        <page string="Errores/Advertencias" name="errors" invisible="not error_log">
                            <div class="alert alert-danger" role="alert" invisible="state != 'error'">
                                <h4><i class="fa fa-exclamation-circle"/> Error en la Exportación</h4>
                            </div>
                            <div class="alert alert-warning" role="alert" invisible="state != 'warning'">
                                <h4><i class="fa fa-exclamation-triangle"/> Advertencias</h4>
                            </div>
                            <field name="error_log" widget="text" nolabel="1"/>
                        </page>
                        
                        <page string="Filtros Aplicados" name="filters">
                            <group>
                                <field name="journal_ids" widget="many2many_tags" options="{'no_open': True}"/>
                                <field name="partner_regime"/>
                            </group>
                        </page>
                        
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Agregar notas sobre esta exportación..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Vista Search de Logs -->
    <record id="view_sicore_export_log_search" model="ir.ui.view">
        <field name="name">sicore.export.log.search</field>
        <field name="model">sicore.export.log</field>
        <field name="arch" type="xml">
            <search string="Buscar Logs SICORE">
                <field name="name"/>
                <field name="export_type"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                
                <filter string="Exitosos" name="success" domain="[('state', '=', 'success')]"/>
                <filter string="Con Advertencias" name="warning" domain="[('state', '=', 'warning')]"/>
                <filter string="Con Errores" name="error" domain="[('state', '=', 'error')]"/>
                
                <separator/>
                <filter string="Percepciones" name="perception" domain="[('export_type', '=', 'perception')]"/>
                <filter string="Retenciones" name="retention" domain="[('export_type', '=', 'retention')]"/>
                <filter string="Combustibles" name="fuel" domain="[('export_type', '=', 'fuel')]"/>
                
                <separator/>
                <filter string="Este Mes" name="this_month" 
                        domain="[('create_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('create_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Mis Exportaciones" name="my_exports" domain="[('user_id', '=', uid)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Tipo" name="group_type" context="{'group_by': 'export_type'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Usuario" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Empresa" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action para Logs (solo managers) -->
    <record id="action_sicore_export_log" model="ir.actions.act_window">
        <field name="name">Logs de Exportación SICORE</field>
        <field name="res_model">sicore.export.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay logs de exportación todavía
            </p>
            <p>
                Los logs se crean automáticamente cada vez que se genera una exportación SICORE.
            </p>
        </field>
    </record>

</odoo>
